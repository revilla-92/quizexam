<!DOCTYPE html>
<html>

    <head>
        <meta charset="utf-8">
        <title> Quiz Exams </title>

        <!-- Importando estos dos scripts no necesitaremos instalarlos con npm pero necesitaremos conexion a internet. -->
        <script src="https://fb.me/react-0.14.0.js"></script>
        <script src="https://fb.me/react-dom-0.14.0.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

        <!-- Hoja de estilo -->
        <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">

        <!-- Estilo por defecto de las tablas que vienen en el modulo fixed-data-table. -->
        <link rel="stylesheet" href="/stylesheets/fixed-data-table.css">

        <!-- Fuente de la pagina -->
        <link href='https://fonts.googleapis.com/css?family=Ubuntu&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
        
    </head>

    <body>

        <header>
            <h1> Quiz Exams </h1>
            <div class="navigation">
                <nav>
                    <ul>
                        <li> <a href="/"> Home </a> </li>

                        <li> <a href="/users/new"> Registrarse </a> </li>

                        <li> <a href="/login"> Login </a> </li>

                        <% if(session.user){ %>
                            <li> <a href="/quizes/new"> Crear Quizes </a> </li>

                            <li> <a href="/quizes"> Quizes </a> </li>

                            <li> <a href="/users"> Usuarios </a> </li>

                            <li> <a href="/logout"> Logout </a> </li>
                        <% } %>

                        <li> <a href="/autor"> Autor </a> </li>
                    </ul>
                </nav>
            </div>

        </header>

        <!-- Para mostrar los errores sin parar de mostar el resto del contenido -->
        <section id="error_container">
            <% if (messages.info) { %>
                <article id='flashinfo'>
                    <h3 class="title_message" id="info_message"> Información de interés: </h3>
                    <ul class="lista_mensajes">
                        <% for (var i in messages.info) { %>
                            <li> <%= messages.info[i] %> </li>
                        <% } %>
                    </ul>
                </article>
            <% } %>

            <% if (messages.success) { %>
                <article id='flashsuccess'>
                    <h3 class="title_message" id="success_message">Tareas completadas con éxito:</h3>
                    <ul class="lista_mensajes">
                        <% for (var i in messages.success) { %>
                            <li> <%= messages.success[i] %> </li>
                        <% } %>
                    </ul>
                </article>
            <% } %>

            <% if (messages.error) { %>
                <article id='flasherror'>
                    <h3 class="title_message" id="error_message">Errores encontrados:</h3>
                    <ul class="lista_mensajes">
                        <% for (var i in messages.error) { %>
                            <li> <%= messages.error[i] %> </li>
                        <% } %>
                    </ul>
                </article>
            <% } %>
        </section>


        <section id="container">
            <%- body %>
        </section>


        <footer>
            TFG - QuizExam
        </footer>
    </body>

</html>