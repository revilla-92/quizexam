<h2> Edite su usuario: </h2>

<div id="form_user">

    <form method='POST' action='/users/edit/<%=userEdit.id%>'>

        <div class="row_form">
		       <div class="row_form">
		    <label for="login"> Nombre de Usuario: </label>
		    <input type="text" id="login" name="login" value="<%= userEdit.login %>" size="30" />
		</div>

		<div class="row_form">
		    <label for="password"> Password: </label>
		    <input type="password" id="password" name="password" value="<%= userEdit.password %>" size="30" />
		</div>

		<div class="row_form">
		    <label for="email"> Email: </label>
		    <input type="email" id="email" name="email" value="<%= userEdit.email %>" size="30" />
		</div>

        <input id="updateUser" class="submit" name="commit" type="submit" value="Guardar Cambios" />

    </form>

</div>